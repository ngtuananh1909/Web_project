      <center>
      <h1 class="center-title top">LIST TOP PRODUCT</h1>
      </center>
      <div class="top-list mt-4" >
        <div class="row" style="width: 1000px; height: 120%;">
          <% products.forEach((product, index) => { %>
          <div class="col-md-4">
            <div class="card product-card">
              <% if (index === 0) { %> 
                <img src="/img/top 1.png" alt="" class="medal-overlay" style="height: 100px; width: 60px;">
                <% } %>
              <% if (index === 1) { %> 
                <img src="/img/top 2.png" alt="" class="medal-overlay" style="height: 100px; width: 60px;">
                <% } %>
              <% if (index === 2) { %> 
                <img src="/img/top 3.png" alt="" class="medal-overlay" style="height: 100px; width: 60px;">
                <% } else { %>
                <li class="num" style="height: 100px; width: 60px;">
                  <a><p><%= index + 1 %></p></a>
                </li>
              <% } %>
              <a href="/product/<%= product.id %>">
                <img
                  src="/uploads/<%= product.image %>"
                  class="card-img-top"
                  alt=""
                />
              </a>
              <div class="card-body">
                <h4 class="card-title"><%= product.name %></h4>
                <% if (product.sale) { %>
                    <span class="badge bg-danger ms-2" style="margin-bottom: 10px;">-<%= product.saleval %>%</span>
                  <p class="card-text" style="margin-bottom: 4px;">
                    Giá: <%= formatCurrency((product.price - (product.price * product.saleval / 100)).toFixed(0)) %> VNĐ
                    <del> <%= formatCurrency(product.price) %> VNĐ</del>
                  </p>
                <% } else { %>
                  <div style="margin-top: 40px;">
                    <p class="card-text">Giá: <%= formatCurrency(product.price) %> VNĐ</p>
                  </div>
                <% } %>                
                <p class="card-text">Ngày tạo: <%= product.formatted_date %></p>
                <p class="card-text">Creator: <%= product.creator %></p>
                <div class="d-flex">
                  <a href="/product/<%= product.id %>" class="btn btn-success me-2" style="width: 300px; margin-left: 10px;">
                    Thông tin <br> sản phẩm
                  </a>
                  <button
                    type="button"
                    class="btn btn-primary addToCartBtn"
                    data-product-id="<%= product.id %>"
                  >
                    Thêm vào giỏ
                  </button>
                </div>
              </div>
              <span
                class="badge bg-primary rounded-pill"
                style="position: absolute; top: 10px; right: 10px"
                ><%= product.sold %></span
              >
            </div>
          </div>
          <% }); %>
        </div>
