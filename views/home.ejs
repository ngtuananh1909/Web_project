              <div class="col-md-6">
                <div class="card mb-3">
                  <img src="" class="card-img-top" alt="Sản phẩm" />
                  <div class="card-body">
                    <h3 class="card-title">Tên sản phẩm</h3>
                    <p class="card-text">Mô tả ngắn về sản phẩm.</p>
                    <p class="card-text">Giá: 1,000,000 VND</p>
                    <a href="/hotproduct" class="btn btn-primary center-text" >Danh sách</a>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="card mb-3">
                  <img src="" class="card-img-top" alt="Khuyến mãi" />
                  <div class="card-body">
                    <h3 class="card-title">Tên chương trình khuyến mãi</h3>
                    <p class="card-text">Chi tiết chương trình khuyến mãi.</p>
                    <p class="card-text">Giảm giá: 20%</p>
                    <a href="/salelist" class="btn btn-danger center-text">Xem chi tiết</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row mt-5">
          <div class="col">
            <h2 class="section-title text-center">Danh mục sản phẩm</h2>
            <div class="row row-cols-1 row-cols-md-5 g-4">
              <% products.forEach(product=> { %>
              <div class="col">
                <div class="card product-card">
                  <a href="/product/<%= product.id %>">
                    <img
                      src="/uploads/<%= product.image %>"
                      class="card-img-top"
                      alt=""
                    />
                  </a>
                  <div class="card-body">
                    <h4 class="card-title"><center><%= product.name %></center></h4>
                    <% if (product.sale) { %>
                      <center><span class="badge bg-danger ms-2" style="margin-bottom: 10px;" >-<%= product.saleval %>%</span></center>
                      <p class="card-text" style="margin-bottom:4px ;">
                        Giá:<del> <%= product.price %> </del>
                        <%= (product.price - (product.price * product.saleval /
                        100)).toFixed(2)%> VNĐ
                      </p>
                      <div style="padding-left: 1px; padding-bottom: 10px">
                        <div class ="creator-day" style ="margin-top: -0px;">
                            <p class="card-text" style="margin-bottom: 3px">
                              Creator: <%= product.creator %>
                            </p>
                            <p class="card-text" style="margin-top: 3px">
                              Ngày tạo: <%= product.formatted_date %>
                            </p>
                        </div>
                      <div class="d-flex mt-3">
                        <a
                          href="/product/<%= product.id %>"
                          class="btn btn-success rounded">
                          <div>
                            Thông tin
                          </div>
                          <div>
                            sản phẩm
                          </div>
                        </a>
                        <a style="margin-left: -20px;">
                          <button
                          type="button"
                          class="btn btn-primary rounded addToCartBtn"
                          data-product-id="<%= product.id %>"
                          >
                            Thêm vào giỏ
                          </button>
                        </a>
                      </div>
                    <% } else { %>
                      <div style="margin-top: 40px;">
                          <p class="card-text">Giá: <%= product.price %> VNĐ</p>
                      </div>
                      <div style="padding-left: -10px; padding-bottom: 10px">
                        <div class ="creator-day" style ="margin-top:1px;">
                            <p class="card-text" style="margin-bottom: -2px">
                              Creator: <%= product.creator %>
                            </p>
                            <p class="card-text" style="margin-top: 3px">
                              Ngày tạo: <%= product.formatted_date %>
                            </p>
                        </div>
                        <div class="d-flex mt-3">
                          <a
                          href="/product/<%= product.id %>"
                          class="btn btn-success rounded">
                            <div>
                              Thông tin
                            </div>
                            <div>
                              sản phẩm
                            </div>
                          </a>
                          <a style="margin-left: -20px;">
                            <button
                            type="button"
                            class="btn btn-primary rounded addToCartBtn"
                            data-product-id="<%= product.id %>"
                            >
                              Thêm vào giỏ
                            </button>
                          </a>
                      </div>
                    <% } %>
                  </div>
                  </div>
                </div>
              </div>
              <% }); %>
            </div>
          </div>
        </div>
      </div>
      <footer class="bg-light py-4 mt-5">
        <div class="container">
          <div class="text-center text-muted">&copy; 2024 E-Shop</div>
          <div class="text-center mt-3">
            <a href="#" class="text-decoration-none text-dark mx-2"
              >Chính sách bảo mật</a
            >
            <a href="#" class="text-decoration-none text-dark mx-2"
              >Điều khoản sử dụng</a
