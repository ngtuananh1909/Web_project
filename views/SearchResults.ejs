      <h2 style="margin-left: 100px;">Kết quả tìm kiếm cho "<%= query %>"</h2>
      <% if (products.length > 0) { %>
        <div class="row flex-row flex-nowrap overflow-auto g-1 product-row">
            <% products.forEach(product => { %>
                <div class="col-3" style="margin-right: -200px;">
                    <div class="card product-card">
                        <a href="/product/<%= product.id %>">
                            <img src="/uploads/<%= product.image %>" class="card-img-top" alt="" />
                        </a>
